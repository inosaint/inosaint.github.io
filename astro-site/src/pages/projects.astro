---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    slug: 'jive-lite',
    title: 'Jive Lite',
    description: 'Building a farmer-centric experience for buying Corn in rural Indonesia',
    image: 'https://placehold.co/360x200'
  },
  {
    slug: 'sahabat-jiva-redesign',
    title: 'Sahabat Jiva redesign',
    description: 'Building a farmer-centric experience for buying Corn in rural Indonesia',
    image: 'https://placehold.co/360x200'
  }
];
---

<BaseLayout title="Projects - Kenneth Mark Dsouza">
  <a href="/" class="back-link">‚Üê Back to Home</a>
  <div style="margin-bottom: 3rem;">
    <h1>Projects</h1>
  </div>

  <div class="grid">
    {projects.map(project => (
      <a href={`/projects/${project.slug}`} class="card">
        <img
          src={project.image}
          alt={project.title}
          class="card-image"
        />
        <h3>{project.title}</h3>
        <p>{project.description}</p>
      </a>
    ))}
  </div>
</BaseLayout>
