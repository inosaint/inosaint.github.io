  title = "Kenneth Mark Dsouza - Product Design Manager",
  description = "Product Design Manager with experience building and leading design teams in South East Asia and India"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hanken+Grotesk:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/liter" rel="stylesheet">
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <div class="container">
      <slot />

      <footer>
        <div class="footer-line footer-line-left"></div>
        <div class="footer-content">
          <div class="footer-links-left">
            <a href="/">Home</a>
            <span>•</span>
            <a href="/resume">Resume</a>
          </div>
          <div class="footer-links-right">
            <a href="https://x.com/kenneth" target="_blank" rel="noopener noreferrer">X</a>
            <span>•</span>
            <a href="https://bsky.app/profile/kenneth.bsky.social" target="_blank" rel="noopener noreferrer">Bluesky</a>
          </div>
        </div>
        <div class="footer-line footer-line-right"></div>
      </footer>
    </div>
  </body>
</html>
